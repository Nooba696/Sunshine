<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <TextView
        android:id="@+id/day_text_view"
        android:text="Today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="48%"
        app:layout_heightPercent="@fraction/list_item_text_views_height"
        app:layout_marginTopPercent="7%"
        app:layout_marginLeftPercent="@fraction/list_item_sub_items_margin"
        app:layout_marginRightPercent="@fraction/list_item_sub_items_margin"/>

    <TextView
        android:id="@+id/month_date_text_view"
        android:text="June 23"
        android:layout_below="@+id/day_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="48%"
        app:layout_heightPercent="@fraction/list_item_text_views_height"
        app:layout_marginLeftPercent="@fraction/list_item_sub_items_margin"
        app:layout_marginRightPercent="@fraction/list_item_sub_items_margin"/>

    <TextView
        android:id="@+id/max_temp_details_text_view"
        android:text="21"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/month_date_text_view"
        android:layout_alignLeft="@+id/month_date_text_view"
        android:layout_alignStart="@+id/month_date_text_view"
        android:layout_alignRight="@+id/month_date_text_view"
        android:layout_alignEnd="@+id/month_date_text_view" />

    <TextView
        android:id="@+id/min_temp_details_text_view"
        android:text="8"
        android:gravity="top"
        app:layout_heightPercent="@fraction/list_item_max_and_mix_temp_text_view_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max_temp_details_text_view"
        android:layout_alignLeft="@+id/max_temp_details_text_view"
        android:layout_alignStart="@+id/max_temp_details_text_view"
        android:layout_alignRight="@+id/max_temp_details_text_view"
        android:layout_alignEnd="@+id/max_temp_details_text_view" />

    <ImageView
        android:id="@+id/weather_type_details_image_view"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/max_temp_details_text_view"
        android:layout_toEndOf="@+id/max_temp_details_text_view"
        android:layout_alignTop="@+id/max_temp_details_text_view"
        app:layout_widthPercent="48%"
        app:layout_heightPercent="24%"
        app:layout_marginLeftPercent="@fraction/list_item_sub_items_margin"
        app:layout_marginRightPercent="@fraction/list_item_sub_items_margin"/>

    <TextView
        android:id="@+id/weather_type_text_view"
        android:text="Clear"
        android:gravity="center"
        app:layout_widthPercent="48%"
        app:layout_heightPercent="@fraction/list_item_text_views_height"
        app:layout_marginLeftPercent="@fraction/list_item_sub_items_margin"
        app:layout_marginRightPercent="@fraction/list_item_sub_items_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_type_details_image_view"
        android:layout_alignLeft="@+id/weather_type_details_image_view"
        android:layout_alignStart="@+id/weather_type_details_image_view"/>

    <TextView
        android:id="@+id/humidity_text_view"
        android:text="HUMIDITY: 84%"
        android:layout_below="@+id/weather_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="48%"
        app:layout_heightPercent="@fraction/list_item_text_views_height"/>
    <TextView
        android:id="@+id/wind_text_view"
        android:text="WIND: 6 km/H NW"
        android:layout_below="@+id/humidity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="48%"
        app:layout_heightPercent="@fraction/list_item_text_views_height"/>
    <TextView
        android:id="@+id/pressure_text_view"
        android:text="PRESSURE: 1014 hPa"
        android:layout_below="@+id/wind_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="48%"
        app:layout_heightPercent="@fraction/list_item_text_views_height"/>
</android.support.percent.PercentRelativeLayout>